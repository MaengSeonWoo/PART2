	<select id="findByKeywords" parameterType="string" resultType="FAQVO">
        SELECT faq_id, keyword, answer, page_url, page_description
        FROM FAQ
        WHERE LOWER(keyword) LIKE '%' || LOWER(#{keyword}) || '%'
